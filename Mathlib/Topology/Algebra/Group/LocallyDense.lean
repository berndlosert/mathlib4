open TopologicalSpace (RegularOpens)
variable [LocallyMovingSMul G Œ±] [FaithfulSMul G Œ±]

theorem fixingSubgroup_compl_le_iff_le_of_regularOpen (s t : RegularOpens Œ±) :
    G‚Ä¢[(‚Üës : Set Œ±)·∂ú] ‚â§ G‚Ä¢[(‚Üët : Set Œ±)·∂ú] ‚Üî s ‚â§ t := by
  refine ‚ü®fun fixing_le => ?le, fun le => (fixingSubgroup_antitone G Œ±).comp
    (compl_antitone (Set Œ±)) le‚ü©
  by_contra not_le

  let u := (‚Üës : Set Œ±) \ closure t
  have u_nonempty : u.Nonempty := by
    refine Set.nonempty_iff_ne_empty.mpr <| mt (fun eq_empty => ?subset) not_le
    unfold_let at eq_empty
    rwa [Set.diff_eq, ‚Üê Set.disjoint_iff_inter_eq_empty, ‚Üê Set.subset_compl_iff_disjoint_right,
      compl_compl, RegularOpens.subset_closure_iff_le] at eq_empty
  have u_open : IsOpen u := by
    unfold_let
    rw [Set.diff_eq]
    exact IsOpen.inter s.regularOpen.isOpen <| isOpen_compl_iff.mpr isClosed_closure

  let ‚ü®f, f_in_fixing, f_ne_one‚ü© := LocallyMovingSMul.nontrivial_elem_of_nonempty
    G u_open u_nonempty
  apply f_ne_one
  apply Subgroup.disjoint_def.mp <| fixingSubgroup_compl_disjoint G (‚Üët : Set Œ±)
  ¬∑ apply fixingSubgroup_antitone _ _ ?ss f_in_fixing
    unfold_let
    rw [Set.diff_eq, Set.compl_inter, compl_compl]
    exact Set.subset_union_of_subset_right subset_closure _
  ¬∑ apply fixing_le
    exact fixingSubgroup_antitone _ _
      (Set.compl_subset_compl.mpr <| Set.diff_subset _ _)
      f_in_fixing

variable (G Œ±) in
/--
The moving subgroup (the fixing subgroup of the complement) forms an order embedding on the
regular open sets when the action is faithful and locally moving.
-/
def LocallyMovingSMul.movingSubgroup_orderEmbedding : RegularOpens Œ± ‚Ü™o Subgroup G where
  toFun := fun r => G‚Ä¢[(‚Üër : Set Œ±)·∂ú]
  map_rel_iff' := fun {r s} => by exact fixingSubgroup_compl_le_iff_le_of_regularOpen r s
  inj' := by
    intro r s eq
    simp only at eq
    apply le_antisymm <;> rw [‚Üê fixingSubgroup_compl_le_iff_le_of_regularOpen (G := G)]
    ¬∑ exact eq.le
    ¬∑ exact eq.ge

end FixingSubgroup
